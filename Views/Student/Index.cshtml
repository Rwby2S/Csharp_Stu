@model IEnumerable<StudentManager.Models.Student>
@{ 
    ViewData["Title"] = "学生列表页面";

}

<div class="card-deck">
    @foreach (var student in Model)
    {
        var photoPath = "~/images/" + (student.PhotoPath ?? "bao.png");
    <div class="card m-3">
        <div class="card-header">
            <h3>@student.Name</h3>
         </div>

        <img class="card-img-top imagesThumbnail" asp-append-version="true" src="@photoPath" />
        <!--m-1就是间隔-->
        <div class="card-footer text-center">

            <a asp-controller="student" asp-action="details" asp-route-id="@student.Id"
                class="btn btn-primary m-1">查看</a>

            <a asp-controller="student" asp-action="edit" asp-route-id="@student.Id" class="btn btn-primary m-1">编辑</a>

            <a href="#" class="btn btn-danger m-1">删除</a>
        </div>
        </div>
        }
    </div>