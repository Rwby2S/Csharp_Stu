@model StudentManager.ViewModels.StudentDetailsViewModel
@{ 
    ViewData["Title"] = "学生详情页";
    var photoPath = "~/images/" + (Model.Student.PhotoPath??"bao.png");
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <h1>@Model.Student.Name</h1>
    </div>

    <div class="card-body text-center">
        <img class="card-img-top" src="@photoPath" asp-append-version="true"/>

        <h4>学生ID: @Model.Student.Id</h4>
        <h4>邮箱: @Model.Student.Email</h4>
        <h4>班级名称: @Model.Student.ClassName</h4>

        <div class="card-footer text-center">
            <a class="btn btn-primary m-1"
               asp-controller="student" asp-action="index">返回</a>
            <a href="#" class="btn btn-primary m-1">编辑</a>
            <a href="#" class="btn btn-danger m-1">删除</a>
        </div>
    </div>
    
</div>

